#!/usr/bin/env bash

package="rdpgd"
version="0.0.20"
file="${package}_${version}_linux_amd64.tar.gz"
url="https://github.com/wayneeseguin/rdpgd/releases/download/${version}/rdpgd_${version}_linux_amd64.tar.gz"

if [[ ! -s "${package}/${file}" ]]
then
  mkdir -p ${package}
  curl -sL "${url}" -o "${package}/${file}"
fi
