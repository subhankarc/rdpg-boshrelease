#!/usr/bin/env bash

package="rdpg-agent"
version="0.0.13"
file="${package}_${version}_linux_amd64.tar.gz"
url="https://github.com/wayneeseguin/rdpg-agent/releases/download/${version}/rdpg-agent_${version}_linux_amd64.tar.gz"

if [[ ! -s "${package}/${file}" ]]
then
  mkdir -p ${package}
  curl -sL "${url}" -o "${package}/${file}"
fi
