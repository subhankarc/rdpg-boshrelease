#!/var/vcap/packages/bash-4.3/bin/bash

nodeName="<%= spec.deployment %>-<%= name %>-<%= index %>"
rdpgDB="<%= p('rdpg_service.db_name') %>"
pgbdrPort="<%= p('pgbdr.port') %>"

while IFS= read -r line
do
  /var/vcap/packages/pgbdr/bin/psql -U postgres -h 127.0.0.1 -p ${pgbdrPort} ${rdpgDB} \
    -c "INSERT INTO rdpg.events (node,msg) VALUES ( '${nodeName}', \$\$${line}\$\$); "
done

