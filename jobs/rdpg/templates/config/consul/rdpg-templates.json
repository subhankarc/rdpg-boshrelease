consul = "127.0.0.1:<%= p('consul.port') %>"
retry = "5s"

auth {
	enabled = true
	username = "<%= p('consul_template.user_name') %>"
	password = "<%= p('consul_template.password') %>"
}

syslog {
	enabled = true
	facility = "LOCAL5"
}

template {
	source = "/var/vcap/jobs/haproxy/config/haproxy.cfg.ctmpl"
	destination = "/var/vcap/jobs/haproxy/config/haproxy.cfg"
	command = "/var/vcap/jobs/haproxy/bin/haproxy reload"
}
