#!/var/vcap/packages/bash-4.3/bin/bash

nodeName="<%= spec.deployment %>-<%= name %>-<%= index %>"
rdpgDB="<%= p('rdpg_agent.db_name') %>"

while IFS= read -r line
do
  /var/vcap/packages/pgbdr/bin/psql -U postgres -h 127.0.0.1 ${rdpgDB} \
    -c "INSERT INTO rdpg.watch_notifications (node,raw) VALUES ( '${nodeName}', \$\$${line}\$\$); "
done

