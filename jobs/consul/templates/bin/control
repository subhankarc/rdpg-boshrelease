#!/var/vcap/packages/bash-4.3/bin/bash

if [[ -z ${1:-} ]] ; then fail "$0 start|stop" ; fi ; action=$1 ; shift 

source "$(dirname $(dirname ${0}))/shell/env"

ulimit -v unlimited

if (( $UID == 0 ))
then setcap cap_net_bind_service=+ep $(readlink -nf ${pkgPath}/bin/consul)
fi

user chown ${storePath}

if ! grep -q 127.0.0.1 /etc/resolv.conf
then sed -i -e '1i nameserver 127.0.0.1' /etc/resolv.conf
fi

args=()
for _path in $(ls -ld /var/vcap/jobs/*/config/* | awk '/config\/consul$/')
do args+=(-config-dir ${_path})
done
for _path in $(ls -ld /var/vcap/store/*/config/* | awk '/config\/consul$/')
do args+=(-config-dir ${_path})
done

case ${action} in
  (start)
    ( 
    user exec ${pkgPath}/bin/consul agent \
      -server \
      -bootstrap-expect ${#nodes[@]} \
      -pid-file "${pidFile}" \
      -data-dir "${storePath}" \
      -config-dir "${jobPath}/config" ${args[@]}
    ) &
    # TODO: Instead of using sleep, how do we test if the consul server is ready 
    #       to process joins?
    sleep 4
    user exec ${pkgPath}/bin/consul join "${nodes[@]}"
    ;;
  (stop)
    ${jobPath}/bin/consul leave
    send_signal TERM
    ;;
  (*)
    fail "Unknown action ${action}"
    ;;
esac

